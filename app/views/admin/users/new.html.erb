<div class="uk-grid uk-container-center">
    <div class="uk-width-1-2">
        <br />
        <h2>Nouvel utilisateur</h2>
    </div>
    <div class="uk-width-1-4">
        <br />
        <%= link_to "Retour", :back, class:"uk-button" %>
    </div>
    <%= form_for [:admin, @user], html: { class:"uk-form" } do |f| %>
    <br />
    <div class="uk-grid">
        <div class="uk-width-1-2">
            <%= f.text_field :nom, placeholder: "Nom" %>
        </div>
        <div class="uk-width-1-2">
            <%= f.text_field :prenom, placeholder: "Prénom" %>
        </div>
    </div>
    <br />
    <div class="uk-grid">
        <div class="uk-width-1-2">
            <%= f.email_field :email, placeholder: "Email" %>
        </div>
        <br />
        <div class="uk-width-1-2">
            <%= f.text_field :password, placeholder: "Mot de passe" %>
        </div>
    </div>
    <br />
    <div class="uk-grid">
        <div class="uk-width-1-2">
            <%= f.select(:type) do %>
            <% [['Eleve', 'Eleve'],['Administrateur', 'Administrateur']].each do |c| -%>
        <%= content_tag(:option, c.first, value: c.last) %>
            <% end %>
            <% end %>
        </div>
        <br />
        <div class="uk-width-1-2">
            <%= f.number_field :promo, placeholder: "Promotion" %>
        </div>
    </div>
    <br />
    <div class="uk-width-1-8">
        <%= f.text_field :numtel, placeholder: "Numéro de Téléphone" %>
    </div>
    <br />
    <div class="uk-grid">
        <div class="uk-width-1-3">
            <%= f.text_field :role, placeholder: "Rôle" %>
        </div>
        <br />
        <div class="uk-width-1-3">
            <%= f.label :Activé? %>
            <%= f.check_box :approved %>
        </div>
    </div>
    <div class="actions uk-text-contrast">
        <br />
        <%= f.submit "Enregistrer",class: "uk-button uk-button-primary uk-button-large" %>
    </div>
    <% end %>
</div>

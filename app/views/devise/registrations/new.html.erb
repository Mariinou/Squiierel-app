<div class="login">

    <div class="h2bis" ><h2>S'enregistrer</h2></div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
        <%= f.text_field :nom, placeholder: "Nom", autofocus: true, placeholder: "Nom",class: "inputbis"   %>
    </div>
    <div class="field">
        <%= f.text_field :prenom, placeholder: "Prénom", autofocus: true, placeholder: "Prénom",class: "inputbis"   %>
    </div>
    <div class="field">
        <%= f.number_field :promo, placeholder: "Promotion", autofocus: true, placeholder: "Promotion",class: "inputbis"   %>
    </div>
    <div class="field">
        <%= f.text_field :numtel, placeholder: "Numéro de Téléphone", autofocus: true, placeholder: "Numéro de Téléphone",class: "inputbis"   %>
    </div>

    <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "Email",class: "inputbis"  %>
    </div>

    <div class="field">
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", placeholder: "Mot de Passe",class: "inputbis" %>
    </div>

    <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirmation du Mot de Passe",class: "inputbis" %>
    </div>

    <div class="actions">
        <%= f.submit "S'enregistrer",class: "btn btn-primary btn-block btn-large" %>
    </div>
    <% end %>

    <br />
    <%= render "devise/shared/links" %>
</div>
